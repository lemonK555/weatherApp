<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lkj.weatherapp.MainActivity">

    <EditText
        android:id="@+id/et_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/send_request"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="获取天气信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#AAA"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/realtime_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时温度"
            android:textColor="#ffffff"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/realtime_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气状态"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weather_lowest_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高温"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/weather_highest_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低温"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/pm_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气质量"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weather_date_more_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X月XX日" />

                <TextView
                    android:id="@+id/weather_week_more_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期几" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/realtime_img_more_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/weather_highest_temperature_more_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高温" />

                <TextView
                    android:id="@+id/weather_lowest_temperature_more_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低温" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weather_date_more_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X月XX日" />

                <TextView
                    android:id="@+id/weather_week_more_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期几" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/realtime_img_more_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/weather_highest_temperature_more_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高温" />

                <TextView
                    android:id="@+id/weather_lowest_temperature_more_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低温" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weather_date_more_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X月XX日" />

                <TextView
                    android:id="@+id/weather_week_more_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期几" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/realtime_img_more_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/weather_highest_temperature_more_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高温" />

                <TextView
                    android:id="@+id/weather_lowest_temperature_more_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低温" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weather_date_more_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X月XX日" />

                <TextView
                    android:id="@+id/weather_week_more_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期几" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/realtime_img_more_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/weather_highest_temperature_more_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高温" />

                <TextView
                    android:id="@+id/weather_lowest_temperature_more_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低温" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAA"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气质量" />

            <TextView
                android:id="@+id/curPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气指数" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pm10_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pm10" />

            <TextView
                android:id="@+id/pm25_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pm2.5" />

            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述很长哦" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wind_direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风向" />

            <TextView
                android:id="@+id/wind_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风力" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#EEE">

    </LinearLayout>
</LinearLayout>
