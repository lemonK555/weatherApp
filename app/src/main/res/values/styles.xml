<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RadioGroupButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="small_border">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#bcbcbc</item>
    </style>
    <style name="details_big_div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--更多天气-->
    <style name="details_more_weather">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--更多天气的三个板块-->
    <style name="details_more_weather_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--更多天气——通用样式-->
    <style name="details_more_weather_item_allStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <!--管理城市-通用样式-->
    <style name="more_city">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>
    <!--管理城市-tv-通用样式-->
    <style name="more_city_tv">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--管理城市-img-通用样式-->
    <style name="more_city_img">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@mipmap/scenery</item>
    </style>
</resources>
